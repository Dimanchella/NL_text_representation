<Window x:Class="NL_text_representation.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NL_text_representation"
        mc:Ignorable="d"
        Title="Естественно-языковой интерфейс к LOD" Height="450" Width="800" MinWidth="800" MinHeight="450">
    <Grid>
        <Label Content="Введите запрос на русском языке" HorizontalAlignment="Left" Margin="120,49,0,0" VerticalAlignment="Top" FontSize="22"/>
        <TextBox x:Name="inputRequest" Margin="120,88,120,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="22"/>
        <Button Content="Выполнить" HorizontalAlignment="Center" Margin="0,140,0,0" Width="210" Click="Button_Click" FontSize="22" Height="54" VerticalAlignment="Top"/>
        <DataGrid x:Name="results" Margin="0,217,0,0" AutoGenerateColumns="False" FontSize="22" SelectionChanged="results_SelectionChanged">
            <DataGrid.Columns>
                <DataGridHyperlinkColumn
                    Width="*"
                        Header="Результат выполнения запроса"
                        Binding="{Binding Path=Value}"
                        IsReadOnly="True">
                </DataGridHyperlinkColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
